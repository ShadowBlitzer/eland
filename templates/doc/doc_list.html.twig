{%- if docs -%}

<div class="panel panel-default printview">

<div class="table-responsive">
<table class="table table-bordered table-striped table-hover footable" data-filter="#q" data-filter-minimum="1">
    <thead>
        <tr>
            <th data-sort-initial="true">
                {{- 'doc.document'|trans -}}
            </th>
            <th data-hide="phone, tablet">
                {{- 'label.time'|trans -}}
            </th>
            {%- block table_head_extra -%}{%- endblock -%}
        </tr>
    </thead>
    <tbody>
        {%- for d in docs -%}
        <tr>
            <td>
                <a href="' . $app['s3_doc_url'] . $d['filename'] . '" target="_self">
                {{- d.name ?? d.org_filename -}}
                </a>
            </td>
            <td>
                {{- d.ts|date_format('min') -}}
            </td>
            {%- block table_body_extra -%}{%- endblock -%}
        </tr>
        {%- endfor -%}
    </tbody>
</table>

</div>
</div>

{%- else -%}
    <div class="panel panel-default">
    <div class="panel-heading">
    <p>
        {{- 'doc.no_items'|trans -}}
    </p>
    </div></div>
{%- endif -%}
