{%- extends 'admin.html.twig' -%}

{%- import 'macro/card.html.twig' as c -%}
{%- import 'macro/button.html.twig' as b -%}

{%- block inner -%}
    {{- form_start(form) -}}

    {{- c.default() -}}
    <h3>{{- 'export.elas.db.title'|trans -}}</h3>
    <p>{{- 'export.elas.db.explain'|trans -}}</p>
    {{- c.body() -}}
    {{- b.default(form.elas_db, 'export.elas.db.btn') -}}
    {{- c.end() -}}

    {{- c.default() -}}
    <h3>{{- 'export.elas.csv.title'|trans -}}</h3>
    <p>{{- 'export.elas.csv.explain'|trans -}}</p>
    {{- c.body() -}}
    {{- b.default(form.users, 'export.elas.csv.users.btn') -}}
    {{- b.default(form.contacts, 'export.elas.csv.contacts.btn') -}}
    {{- b.default(form.categories, 'export.elas.csv.categories.btn') -}}
    {{- b.default(form.messages, 'export.elas.csv.messages.btn') -}}
    {{- b.default(form.transactions, 'export.elas.csv.transactions.btn') -}}
    {{- c.end() -}}

    {{- form_end(form) -}}
{%- endblock inner -%}
