{%- macro badge(key) -%}
	{%- set ary = {
		'public': 'success', 'interlets': 'warning',
		'users': 'default', 'admin': 'info',
		'offer': 'default', 'want': 'primary',
		'service': 'service', 'good': 'good'
	} -%}
	{%- set class = ary[key] ?? 'default' -%}
	<span class="badge badge-{{- class -}}">{{- ('badge.'~key)|trans -}}</span>
{%- endmacro badge -%}
