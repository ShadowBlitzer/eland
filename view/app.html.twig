{% extends 'base.html.twig' %}

{% import 'macro/flash.html.twig' as f %}
{% import 'macro/menu.html.twig' as m %}

{% set active_route = global.request.attributes.get('_route') %}
{% set active_menu = active_route|split('_')[0] %}
{% set schema = global.request.attributes.get('schema') %}

{% set menu_el = menu_ary[active_menu] ?? admin_menu_ary[active_menu] %}

{% block title %}{{ config('systemname', schema) }}{% endblock title %}

{% block url_index %}{% endblock url_index %}

{% block content %}

<div class="row-offcanvas row-offcanvas-left">
<div id="sidebar" class="sidebar-offcanvas">

<br>
<ul class="nav nav-pills nav-stacked">

{% block menu_left %}{% endblock %}

</ul>
</div>

<div id="wrap">
<div id="main" class="container-fluid clear-top{% block div_main_class %}{% endblock %}">

{% block flash %}{{ f.flash() }}{% endblock flash %}

{% block top_buttons_container %}

<div class="row">
<div class="col-md-12 top-buttons">
<div class="visible-xs pull-left button-offcanvas">
<button type="button" class="btn btn-primary btn-md " data-toggle="offcanvas"
 title="Menu"><i class="fa fa-chevron-left"></i></button>
</div>

{% block top_buttons %}{% endblock %}

</div>
</div>

{% endblock top_buttons_container %}

{% block top_right_container %}
<div class="pull-right">
{% block top_right %}{% endblock %}
</div>
{% endblock top_right_container %}

{% block heading_container %}
<h1>
{% block heading_pre %}{% endblock %}
{% block heading_fa_container %}
<i class="fa fa-{% block fa %}{{ menu_el['fa'] }}{% endblock %}"></i>
{% endblock heading_fa_container %}
{% block heading %}{{ menu_el['title']|trans }}{% endblock heading %}
{% block heading_post %}{% endblock %}
</h1>
{% endblock heading_container %}

{% block inner %}{% endblock inner %}

</div>
{% endblock content %}

{% block footer_extra %}
<p>{{ 'eland.github'|trans({
	'%link_a_open%': '<a href="https://github.com/eeemarv/eland/issues">',
	'%link_a_close%': '</a>',
	'%link_b_open%': '<a href="https://github.com">',
	'%link_b_close%': '</a>'
})|raw }}</p>
{% endblock footer_extra %}
