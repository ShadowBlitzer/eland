{% extends 'anon.html.twig' %}

{% block summernote_css %}{% endblock %}

{% block inner %}

{{ form_start(form) }}

<p>

<div class="input-group input-group-lg">
      <span class="input-group-addon addon-info"><i class="fa fa-user"></i>
      </span>
{% set login_placeholder = config('template_lets', schema) ? 'login.login_lets' : 'login.login' %}

     {{ form_widget(form.login, {'attr': {'placeholder': login_placeholder}}) }}
</div>
{{ form_errors(form.login) }}

</p>

<p>

<div class="input-group input-group-lg">
  <span class="input-group-addon addon-info"><i class="fa fa-key"></i>
  </span>
{{ form_widget(form.password, {'attr': {'placeholder': 'password' }}) }}
</div>
{{ form_errors(form.password) }}
</p>

<p>
	{{ form_widget(form.submit, {'label': 'login.submit_btn', 'attr': {'class': 'btn btn-default btn-lg'}}) }}
</p>

{{ form_end(form) }}

<a href="{{ path('password_reset', {'schema': schema}) }}">{{ 'login.password_reset_link'|trans }}</a>

{% endblock inner %}

{% block summernote_js %}{% endblock %}

