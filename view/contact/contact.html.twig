{% extends 'anon.html.twig' %}

{% import 'macro/asset.html.twig' as a %}

{% block inner %}

{{ config('contact_form_top_text', schema) }}

{{ form_start(form) }}

<p>

<div class="input-group input-group-lg">
<span class="input-group-addon addon-info"><i class="fa fa-envelope-o"></i>
</span>
{{ form_widget(form.email, {'attr': {'placeholder': 'contact.email'}}) }}
</div>
{{ form_errors(form.email) }}
<p>{{ 'contact.email_explain'|trans }}</p>

</p>

<p>

{{ form_widget(form.message, {'attr': {'class': 'rich-edit'}}) }}
{{ form_errors(form.message) }}

</p>

<p>
{{ form_widget(form.submit, {'label': 'send', 'attr': {'class': 'btn btn-default btn-lg'}}) }}
</p>

{{ form_end(form) }}

{{ config('contact_form_bottom_text', schema) }}

{% endblock inner %}

{% block js %}
{{ a.js('rich_edit.js') }}
{% endblock %}
