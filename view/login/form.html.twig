{% extends 'anon.html.twig' %}

{% import 'macro/button.html.twig' as b %}
{% import 'macro/panel.html.twig' as p %}


{% block inner -%}

{%- set label_login = config('template_lets', schema) ? 'login.login_lets' : 'login.login' -%}

{{- p.form_start(form) -}}

{{- form_row(form.login, {'label': label_login, 
  'addon_fa': 'user', 'addon_class': 'addon-info'}) -}}
{{- form_row(form.password, {'label': 'label.password',
  'addon_class': 'addon-info'}) -}}

{{- b.default(form.submit, 'login.submit_btn') -}}

{{- p.form_end(form) -}}

<a href="{{- path('password_reset', {'schema': schema}) -}}">{{- 'login.password_reset_link'|trans -}}</a>

{%- endblock inner %}



