
{% macro cancel(location, label) %}
<a href="{{ location|default('#') }}" class="btn btn-default">{{ label|default('cancel')|trans }}</a>&nbsp;
{% endmacro %}

{% macro delete(label) %}
<input type="hidden" name="_method" value="delete">
<input type="submit" value="{{ label|default('delete')|trans }}" name="zend" class="btn btn-danger">&nbsp;
{% endmacro %}

{% macro edit(label) %}
<input type="hidden" value="put" name="_method">
<input type="submit" value="{{ label|default('edit')|trans }}" name="zend" class="btn btn-primary">&nbsp;
{% endmacro %}

{% macro add(label) %}
<input type="submit" value="{{ label|default('add')|trans }}" name="zend" class="btn btn-success">&nbsp;
{% endmacro %}

{% macro send(label) %}
<input type="submit" value="{{ label|default('send')|trans }}" name="zend" class="btn btn-default">&nbsp;
{% endmacro %}

