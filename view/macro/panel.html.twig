	data-target="#filter">
	<i class="fa fa-caret-down"></i>
	<span class="hidden-xs hidden-sm">&nbsp;{{- 'filter'|trans -}}
	</span></button>
	</div>
{%- endmacro filter_toggle_btn -%}

