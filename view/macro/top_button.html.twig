{% macro add(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.add', 'success', 'plus') -}}
{%- endmacro add %}

{% macro edit(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.edit', '', 'pencil') -}}
{%- endmacro edit %}

{% macro delete(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.delete', 'danger', 'times') -}}
{%- endmacro delete %}

{% macro list(href, title, fa) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.list', 'default', fa) -}}
{%- endmacro list %}

{% macro button(href, title, label, class, fa) -%}
    <a href="{{- href -}}" 
    class="btn btn-{{- class -}}" 
    title="{{- title|trans -}}">
    <i class="fa fa-{{- fa -}}"></i>
    <span class="hidden-xs hidden-sm">&nbsp;
    {{- label|trans -}}
    </span></a>
{%- endmacro button %}