{% macro add(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.add', 'success', 'plus') -}}
{%- endmacro add %}

{% macro edit(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.edit', 'info', 'pencil') -}}
{%- endmacro edit %}

{% macro del(href, title) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.delete', 'danger', 'times') -}}
{%- endmacro del %}

{% macro approve(form_submit) -%}
{{- form_widget(form_submit, {'label': 'btn.approve', 'fa': 'thumbs-o-up', 'attr': {'class': 'btn-warning'}}) -}}&nbsp;
{%- endmacro approve %}

{% macro list(href, title, fa) -%}
    {% import _self as b %}
    {{- b.button(href, title, 'btn.list', 'default', fa) -}}
{%- endmacro list %}

{% macro button(href, title, label, class, fa) -%}
    <a href="{{- href -}}" 
    class="btn btn-{{- class -}}" 
    title="{{- title|trans -}}">
    <i class="fa fa-{{- fa -}}"></i>
    <span class="hidden-xs hidden-sm">&nbsp;
    {{- label|trans -}}
    </span></a>
{%- endmacro button %}