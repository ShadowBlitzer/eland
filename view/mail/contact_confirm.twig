{%- extends 'mail/base.twig' -%}
{%- trans_default_domain 'mail' -%}

{%- block subject_line -%}
    {{- 'contact_confirm.subject'|trans({
        '%system_name%': config('systemname', schema)}) -}}
{%- endblock subject_line %}

{%- block html_content -%}

<p>
    {{- 'contact_confirm.html_msg'|trans({
        '%link_open%': '<a href="' ~ confirm_url ~ '">',
        '%link_close%': '</a>'
    })|raw -}}
</p>

<p>
    {{- 'expiration.1_day'|trans -}}
</p>

<p>
    {{- 'contact_confirm.explain'|trans({
        '%system_name%': config('systemname', schema),
        '%link_open%': '<a href="' ~ contact_url ~ '">',
        '%link_close%': '</a>'
    })|raw -}}
</p>
{%- endblock html_content -%}

{% block text_content %}

{{ 'contact_confirm.text_msg'|trans }}

{{ confirm_url }}

{{ 'expiration.1_day'|trans }}

{{ 'contact_confirm.explain'|trans({
    '%system_name%': config('systemname', schema),
    '%link_open%': '',
    '%link_close%': ''
}) }}

{{ contact_url }}

{% endblock text_content %}
