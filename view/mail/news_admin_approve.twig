{% extends 'mail/base_admin.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'news_admin_approve.subject'|trans -}}
{%- endblock subject_line %}

{% block html_content %}

<h3>
    {{- 'news_admin_approve.title'|trans -}}
</h3>

<p>
    {{- 'news_admin_approve.message'|trans({
        '%subject%': news.headline
    }) -}}
</p>

<p>
    <a href="{{- mail_url('news', {'id': news.id}, schema) -}}">
        {{- 'news_admin_approve.action'|trans -}}
    </a>
</p>

{% endblock html_content %}

{% block text_content %}

{{ 'news_admin_approve.title'|trans|underline }}

{{ 'news_admin_approve.message'|trans({
    '%subject%': news.headline
}) }}

{{ 'news_admin_approve.action'|trans }}

{{ mail_url('news', {'id': news.id}, schema) }}

{% endblock text_content %}

{% block html_unsubscribe -%}
{%- include 'mail/unsubscribe/news_admin.html.twig' -%}
{%- endblock html_unsubscribe %}

{% block text_unsubscribe %}
{% include 'mail/unsubscribe/news_admin.text.twig' %}
{% endblock text_unsubscribe %}
