{% extends 'mail/base/user.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'password_reset.subject'|trans -}}
{%- endblock %}

{%- block html_content -%}
<h3>
    {{- 'password_reset.title'|trans -}}
</h3>

<p>
    {{- 'password_reset.message'|trans -}}
</p>

<p>
    {{- 'label.password'|trans -}}: <strong>{{- password -}}</strong>
</p>
{%- endblock html_content -%}

{% block text_content %}

{{ 'password_reset.title'|trans|underline }}

{{ 'password_reset.message'|trans }}

{{ 'label.password'|trans }}: {{ password }}

{% endblock text_content %}
