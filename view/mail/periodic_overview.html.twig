{% extends 'mail/base.html.twig' %}
{% import 'mail/macro_periodic_overview.html.twig' as m %}

{% block body %}

{% for b in blocks_sorted %}

{% if b == 'messages' %}
    {{ m.messages(messages, group, new_message_url, 
        messages_url, s3_img, validate_param) }}
{% elseif b == 'interlets' %}
    {{ m.interlets(interlets, url_login, validate_param) }}
{% elseif b == 'forum' %}
    {{ m.forum(forum, forum_en, show_forum, forum_url, validate_param) }}
{% elseif b == 'news' %}
    {{ m.news(news, show_news, news_url, validate_param) }}
{% elseif b == 'docs' %}
    {{ m.docs(docs, show_docs, validate_param) }}
{% elseif b == 'new_users' %}
    {{ m.new_users(new_users, show_new_users, validate_param) }}
{% elseif b == 'leaving_users' %}
    {{ m.leaving_users(leaving_users, show_leaving_users, validate_param) }}
{% elseif b == 'transactions' %}
    {{ m.transactions(transactions, show_transactions, group, 
        new_transaction_url, transactions_url, validate_param) }}
{% endif %}

{% endfor %}

{% endblock body %}

{% block unsubscribe %}
{{ m.unsubscribe(account_edit_url, validate_param) }}
{% endblock unsubscribe %}

