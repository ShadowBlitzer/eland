{% extends 'mail/base.html.twig' %}

{% block body %}

<h3><a href="{{ messages_url }}">Vraag en aanbod</a></h3>
{% if messages %}
<p>Deze lijst bevat vraag en aanbod dat de afgelopen {{ group.saldofreqdays }} dagen online is geplaatst.</p>
<ul>
{% for msg in messages %}
<li><strong><a href="{{ msg.url }}">{% if msg.offer %}Aanbod{% else %}Vraag{% endif %}: {{ msg.content }}</a></strong>
<br>
{% if msg.images|length %}<br><img src="{{ s3_img }}{{ msg.images.0 }}" height="200" alt="afbeelding"><br>{% endif %}
{{ msg.description }}
{% if msg.amount %}<br>(Richt-)prijs: {{ msg.amount }} {{ group.currency }}{% if msg.units %} per {{ msg.units }}{% endif %}{% endif %}
<br>Ingegeven door: <a href="{{ msg.user_url }}">{{ msg.user }}</a>
{% if msg.addr %}<a href="https://www.google.be/maps/place/{{ msg.addr }}">adres</a>
{% if msg.geo is defined and user.geo is defined %}{{ distance_p(user.geo, msg.geo) }}{% endif %} | {% endif %}
{% if msg.postcode %}postcode: {{ msg.postcode }} | {% endif %}
{% for mail in msg.mail %}<a href="mailto:{{ mail }}?subject={{ msg.content|url_encode }}">email</a>
{% if not loop.last %}|{% endif %} {% endfor %}
</li><br>

{% endfor %}
</ul>

{% else %}
<p>Er werd geen nieuw vraag of aanbod online geplaatst.</p>
{% endif %}

<p><a href="{{ new_message_url }}">Geef zelf je eigen vraag of aanbod in.</a></p>

{% if interlets %}
<h4>Recent interLETS vraag en aanbod</h4>

<p><a href="url_login">Log in</a> en ga via 'Groep' in de navigatiebalk naar de betreffende interLETS groep voor meer informatie.</p>

{% for grp in interlets %}
<h5>Groep: {{ grp.group }}</h5>
<ul>
	{% for msg in grp.messages %}
		<li>{% if msg.offer %}Aanbod{% else %}Vraag{% endif %}: {{ msg.content }} <br>
		Ingegeven door: {{ msg.user }} [{{ grp.group }}]</li><br>
	{% endfor %}
</ul>
{% endfor %}

{% endif %}

{% if forum_en and show_forum != 'none' %}
<h3><a href="{{ forum_url }}">Forum</a></h3>

	{% if forum %}
	<ul>
	{% for f in forum %}
	<li><a href="{{ f.url }}">{{ f.subject }}</a>
{#	&nbsp;[{{ msg.new_reply_count }}]  #}
	</li>
	{% endfor %}
	</ul>
	{% else %}
	<p>Er zijn geen nieuwe forumberichten.</p>
	{% endif %}
{% endif %}

{% if show_news != 'none' %}

<h3><a href="{{ news_url }}">Nieuws</a></h3>

{% if news %}
<ul>
{% for n in news %}
<li><a href="{{ n.url }}">{{ n.headline }}</a><br><br>
{{ n.newsitem }}<br><br>
{% if n.location %}Plaats: <strong>{{ n.location }}</strong><br>{% endif %}
{% if n.itemdate %}Datum: <strong>{{ n.itemdate_formatted }}</strong><br>{% endif %}

Ingegeven door: <a href="{{ n.user_url }}">{{ n.user }}</a>
</li><br><br>
{% endfor %}
</ul>
{% else %}
	{% if show_news == 'recent' %}
	<p>Er zijn geen recente nieuwsberichten.</p>
	{% else %}
	<p>Er zijn geen nieuwe nieuwsberichten.</p>
	{% endif %}
{% endif %}

{% endif %}

{% if show_docs != 'none' %}

<h3>Nieuwe Documenten</h3>

{% if docs %}
<ul>
{% for d in docs %}
<li><a href="{{ d.url }}">{{ d.name }}</a></li>
{% endfor %}
</ul>
{% else %}
<p>Er zijn geen nieuwe documenten.</p>
{% endif %}

{% endif %}

{% if show_new_users != 'none' %}

<h3>Nieuwe leden</h3>

{% if new_users %}
<ul>
	{% for u in new_users %}
<li><a href="{{ u.url }}">{{ u.text }}</a>{% if u.postcode %} | postcode: {{ u.postcode }}{% endif %}</li>
	{% endfor %}
</ul>
{% else %}
	{% if show_new_users == 'recent' %}
		<p>Er zijn geen nieuwe leden bijgekomen.</p>
	{% else %}
		<p>Momenteel zijn er geen nieuwe leden.</p>
	{% endif %}
{% endif %}

{% endif %}


{% if show_leaving_users != 'none' %}

	<h3>Uitstappende leden</h3>

	{% if leaving_users %}
	<ul>
		{% for u in leaving_users %}
	<li><a href="{{ u.url }}">{{ u.text }}</a>{% if u.postcode %} | postcode: {{ u.postcode }}{% endif %}</li>
		{% endfor %}
	</ul>
	{% else %}
		{% if show_leaving_users == 'recent' %}
			<p>Er zijn geen extra uitstappende leden.</p>
		{% else %}
			<p>Momenteel zijn er geen uitstappende leden.</p>
		{% endif %}
	{% endif %}

{% endif %}

{% if show_transactions != 'none' %}

<h3><a href="{{ transactions_url }}">Recente transacties</a></h3>

{% if transactions %}
<ul>
{% for tr in transactions %}
<li>{{ tr.amount }} {{ group.currency }} van
{% if tr.real_from %}
{{ tr.real_from }} [ {{ tr.from_name }} ]
{% else %}
<a href="{{ tr.from_user_url }}">{{ tr.from_user }}</a>
{% endif %}
naar
{% if tr.real_to %}
{{ tr.real_to }} [ {{ tr.to_name }} ]
{% else %}
<a href="{{ tr.to_user_url }}">{{ tr.to_user }}</a>
{% endif %}
<br>
{{ tr.description }}
</li><br>
{% endfor %}
</ul>
{% else %}
<p>Er zijn geen recente transacties.</p>
{% endif %}

{% endif %}

{% endblock body %}

{% block unsubscribe %}
<p>Je ontvangt deze mail omdat de optie 'Periodieke mail met recent vraag en aanbod' aangevinkt staat in je instellingen.
Klik <a href="{{ account_edit_url }}">hier</a> om aan te passen</p>
{% endblock unsubscribe %}

