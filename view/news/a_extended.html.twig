			echo '</span>';
		}
#}
</p>
</div>
</div>


{%- else -%}
{{- p.warning() -}}
<p>{{- 'news.no_items'|trans -}}</p>
{{- p.end -}}
</div></div>
{%- endfor -%}
{{- pg.pagination(route, all_params, pagination) -}}

{%- endblock inner -%}



