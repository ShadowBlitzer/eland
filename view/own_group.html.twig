{% extends 'authenticated.html.twig' %}

{% import 'macro/menu.html.twig' as m %}

{% set personal_menu_ary = {
  'user_self': {'title': 'user_self.title', 'fa': 'user', 'route': 'user_self', 'view': 'user'},
  'ad_self': {'title': 'ad_self.title', 'fa': 'newspaper-o', 'route': 'ad_self', 'view': 'ad'},
  'transaction_self': {'title': 'transaction_self.title', 'fa': 'exchange', 'route': 'transaction_self', 'view': 'transaction'},
  'notification_self': {'title': 'notification_self.title', 'fa': 'bell-o', 'route': 'notification_self', 'view': 'notification'},
}

%}

{% set personal_menu_en = [
  'user_self', 'ad_self', 'transaction_self', 
  'notification_self'
]

%}

{%- block navbar_user_items -%}

  {%- for key in personal_menu_en -%}
    {%- if personal_menu_ary[key] is defined -%}
		{{- m.li(key, personal_menu_ary[key], active_menu, acc_sch|view(personal_menu_ary[key].view)) -}}
    {%- endif -%}
  {%- endfor -%}

  {{- m.divider() -}}

{%- endblock navbar_user_items -%}
