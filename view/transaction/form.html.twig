{% extends 'admin.html.twig' %}

{% import 'macro/button.html.twig' as b %}
{% import 'macro/panel.html.twig' as p %}

{% block heading -%}
    {{- 'transaction_add.title'|trans -}}
{%- endblock heading -%}

{% block inner -%}

{{- p.form_start(form) -}}

{%- block form_fields -%}
    {%- block form_id_from -%}
        {{- form_row(form.id_from, {'label': 'label.from', 'addon_fa': 'user'}) -}}
    {%- endblock form_id_from -%}

    {{- form_row(form.id_to, {'label': 'label.to', 'addon_fa': 'user'}) -}}
    {{- form_row(form.amount, {'label': 'label.amount', 
        'addon_label': config('currency', schema) }) -}}
    {{- form_row(form.description, {'label': 'label.description', 
        'addon_fa': 'pencil'}) -}}
{%- endblock form_fields -%}

{{- b.cancel(path('transaction_index', acc_sch)) -}}

{% block submit -%}
{{-  b.add(form.submit) -}}
{%- endblock %}

{{- p.form_end(form) -}}

{%- endblock inner %}