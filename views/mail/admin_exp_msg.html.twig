{% extends 'mail/base.html.twig' %}

{% block body %}

<h4>Admin overzicht van vervallen vraag en aanbod</h4>

{% if messages %}
<ul>
{% for msg in messages %}
<li><a href="{{ msg.url }}">{{ msg.content }}</a>
<br>Gebruiker: <a href="{{ msg.user_url }}">{{ msg.user_str }}</a></li>
{% endfor %}
</ul>
{% else %}
<p>Er is momenteel geen vervallen vraag of aanbod.</p>
{% endif %}

{% endblock body %}

{% block accountinfo %}{% endblock accountinfo %}
{% block support %}{% endblock support %}
{% block unsubscribe %}
<p>Je ontvangt deze periodieke overzichtsmail voor admins omdat dit aangevinkt staat in de <a href="{{ config_url }}">instellingen</a>.</p>
{% endblock unsubscribe %}
